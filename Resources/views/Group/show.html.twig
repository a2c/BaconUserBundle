{% extends 'BaconCoreBundle::layout.html.twig' %}

{% block body -%}
    <section class="content-header">
        <h1>
            {{ 'Group'|trans }}
            <small>{{ 'Details'|trans }}</small>
        </h1>
        {{ bacon_breadcrumbs_render() }}
    </section>

    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <section class="row">
                    <div class="col-lg-4">
                        <div class="btn-group">
                            <a href="{{ path('fos_user_group_list') }}" class="btn btn-default">
                                <span class="glyphicon glyphicon-th-list"></span>
                                {{ 'List'|trans }}
                            </a>
                            <a href="{{ path('fos_user_group_new') }}" class="btn btn-success">
                                <span class="glyphicon glyphicon-plus"></span>
                                {{ 'New'|trans }}
                            </a>
                            <button type="button" class="btn btn-danger" title="" data-target="#modalDelete{{ group.id }}" data-toggle="modal">
                                <span class="glyphicon glyphicon-remove"></span> {{ 'Remove'|trans }}
                            </button>
                            {% embed 'BaconCoreBundle:partial:modalDelete.html.twig' with {
                                url: path('fos_user_group_delete', { groupName: group.name }),
                                id: group.id
                            } %}
                            {% endembed %}
                        </div>
                    </div>
                </section>
                {% include 'BaconCoreBundle:partial:message.html.twig' %}
            </div>
            <div class="box-body">
                <div class="table-responsive">

                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>{{ 'Id'|trans }}</th>
                                <td>{{ group.id }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'Name'|trans }}</th>
                                <td>{{ group.name }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
