{% trans_default_domain 'FOSUserBundle' %}
<div class="register-box-body">
    <p class="login-box-msg">{{ 'Forgot my password'|trans }}</p>
    <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
        {{ form_widget(form) }}
        <div class="row">
            <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">{{ 'resetting.reset.submit'|trans }}</button>
            </div>
        </div>
    </form>
</div>
