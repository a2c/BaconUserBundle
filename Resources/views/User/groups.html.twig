{% extends 'BaconCoreBundle::layout.html.twig' %}

{% block body -%}

    <section class="content-header">
        <h1>
            {{ 'User'|trans }}
            <small>{{ 'Groups'|trans }}</small>
        </h1>
        {{ bacon_breadcrumbs_render() }}
    </section>

    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <section class="row">
                    <div class="col-lg-4">
                        <div class="btn-group">
                            <a href="{{ path('admin_user') }}" class="btn btn-default">
                                <span class="glyphicon glyphicon-th-list"></span>
                                {{ 'List'|trans }}
                            </a>
                        </div>
                    </div>
                </section>
                {% include 'BaconCoreBundle:partial:message.html.twig' %}
            </div>
            {{ form_start(form, { action : path('bacon_user_user_groups', { id: entity.id }) }) }}
            <div class="box-body">
                {{ form_widget(form) }}
            </div>

            <div class="box-footer">
                <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk"></span> {{ 'Submit'|trans }}</button>
            </div>
            {{ form_end(form) }}

        </div>
    </section>
{% endblock %}